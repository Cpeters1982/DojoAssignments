<p id="notice"><%= notice %></p>

<h1><%= @dojo.branch %></h1>
<%= link_to 'Edit', edit_dojo_path(@dojo) %>

<p>
  <strong>Address:</strong>
  <%= @dojo.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @dojo.city %>
  <strong>State:</strong>
  <%= @dojo.state %>
</p>

<h3>Student Roster</h3>
<table border=1 cellpadding=5>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', dojo_student_path(:dojo_id => @dojo.id, :id => student.id)%></td>
        <td><%= link_to 'Edit', edit_dojo_student_path(:dojo_id => @dojo.id, :id => student.id) %></td>
        <td><%= link_to 'Destroy', dojo_student_path(:dojo_id => @dojo.id, :id => student.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Home', dojos_path %> | <%= link_to 'Add Student', new_dojo_student_path(@dojo) %>
