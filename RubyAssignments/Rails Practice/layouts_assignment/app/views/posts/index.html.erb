
<% content_for :first_col do %>
<h1>All Posts</h1>
<table class="table table-striped">
<thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
  </tr>
</thead>

<tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.first_name %> <%= post.last_name %></td>
    </tr>
  <% end %>
</tbody>
</table>


<% end %>

<% content_for :second_col do %>
  <h1>New Post</h1>
  <%= render 'form' %>
<% end %>

<% content_for :third_col do %>
  <h2>Go to Users Page</h2>
  <%= link_to "All Users", users_path, :class => 'btn btn-info' %>
<% end %>
